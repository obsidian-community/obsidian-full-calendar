{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"strict": true,
		"moduleResolution": "node",
        "esModuleInterop": true,
		"importHelpers": true,
		"isolatedModules": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"jsx": "react"
	},
	"include": ["**/*.ts"]
}
